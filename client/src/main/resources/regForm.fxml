<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:controller="RegController" alignment="center"
      xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" >

   <GridPane VBox.vgrow="ALWAYS">
     <columnConstraints>
       <ColumnConstraints fillWidth="false" halignment="CENTER" hgrow="NEVER" minWidth="10.0" prefWidth="100.0" />
       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
     </columnConstraints>
     <rowConstraints>
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
     </rowConstraints>

     <Label text="user name"/>
     <TextField fx:id="loginField" onAction="#register" promptText="login" GridPane.columnIndex="1"/>
     <Label text="password" GridPane.rowIndex="1"/>
     <PasswordField fx:id="passwordField" onAction="#register" promptText="password"
                    GridPane.columnIndex="1" GridPane.rowIndex="1"/>
   </GridPane>

  <TextArea fx:id="textArea" editable="false" VBox.vgrow="ALWAYS"/>
  <Button fx:id="btnReg" disable="true" onAction="#register" text="accept"/>
</VBox>